<configuration scan="true">
    <!-- 콘솔 포맷 (시간, 레벨, 메시지, 클래스.메서드:라인) -->
    <property name="COLOR_PATTERN"
              value="%d{HH:mm:ss.SSS} %highlight([%level]) %highlight([%msg]) [%class{36}.%method:%line]%n"/>

    <!-- 콘솔 출력기 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder><pattern>${COLOR_PATTERN}</pattern></encoder>
    </appender>

    <!-- 프레임워크 로그는 warn 이상만 -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="com.example.moyeorak" level="INFO"/>

    <!-- info까지 콘솔 출력 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>